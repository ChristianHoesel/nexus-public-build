{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Nexus (Quick)",
      "type": "shell",
      "command": "./build-local.sh",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Nexus (Custom Version)",
      "type": "shell",
      "command": "./build-local.sh",
      "args": [
        "${input:nexusVersion}"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Maven Clean Install (No Tests)",
      "type": "shell",
      "command": "cd nexus-public && ./mvnw clean install -Ppublic -DskipTests",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Maven Clean Install (With Tests)",
      "type": "shell",
      "command": "cd nexus-public && ./mvnw clean install -Ppublic",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Docker Build",
      "type": "shell",
      "command": "docker build -t nexus-oss:custom .",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Docker Compose Up",
      "type": "shell",
      "command": "docker-compose up -d",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "nexusVersion",
      "type": "promptString",
      "description": "Nexus Version/Branch (z.B. release-3.84.1-01)",
      "default": "release-3.84.1-01"
    }
  ]
}
